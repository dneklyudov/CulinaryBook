<Page x:Class="CulinaryBook.PageMain.PageLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CulinaryBook.PageMain"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="Авторизация">

    <StackPanel Width="160" HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock TextWrapping="Wrap" Text="Логин:" Width="160" Margin="0,0,0,5"/>
        <TextBox Name="txbLogin" TextWrapping="Wrap" Width="160" Margin="0,0,0,5" Height="24"/>
        <TextBlock TextWrapping="Wrap" Text="Пароль:" Margin="0,0,0,5"/>
        <PasswordBox Name="psbPassword" Width="160" Margin="0,0,0,5" Height="24"/>
        <Button Click="Button_Click" Content="Войти" Width="100" Margin="0,0,0,5"/>
        <Button Content="Регистрация" Width="100"/>
    </StackPanel>
</Page>
