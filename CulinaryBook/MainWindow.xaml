<Window x:Class="CulinaryBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CulinaryBook"
        mc:Ignorable="d"
        Title="Кулинарная книга" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="350*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Image  />
            <TextBlock Style="{StaticResource Title}" Text="Кулинарная книга"/>
        </StackPanel>
        <Frame Grid.Row="1" Name="FrmMain" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
