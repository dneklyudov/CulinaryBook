<Page x:Class="CulinaryBook.Pages.Reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CulinaryBook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="Reg">

    <Grid>
        <StackPanel Width="160" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-60,0,0" >
            <TextBlock HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Top" FontSize="24" TextAlignment="Center">
                <Run Language="ru-ru" Text="Регистрация"/>
            </TextBlock>
            
            <TextBlock TextWrapping="Wrap" Text="Имя автора:" Width="160" Margin="0,0,0,5"/>
            <TextBox x:Name="txbName" TextWrapping="Wrap" Width="160" Margin="0,0,0,5" />
            
            <TextBlock TextWrapping="Wrap" Text="Логин:" Width="160" Margin="0,0,0,5"/>
            <TextBox x:Name="txbLogin" TextWrapping="Wrap" Width="160" Margin="0,0,0,5" />



            <TextBlock TextWrapping="Wrap" Text="Стаж:" Width="160" Margin="0,0,0,5"/>
            <TextBox x:Name="txbStage" TextWrapping="Wrap" Width="160" Margin="0,0,0,5" />

            <TextBlock TextWrapping="Wrap" Text="Email:" Width="160" Margin="0,0,0,5"/>
            <TextBox x:Name="txbEmail" TextWrapping="Wrap" Width="160" Margin="0,0,0,5" />

            <TextBlock TextWrapping="Wrap" Text="Телефон:" Width="160" Margin="0,0,0,5"/>
            <TextBox x:Name="txbPhone" TextWrapping="Wrap" Width="160" Margin="0,0,0,5" />
            
            <TextBlock TextWrapping="Wrap" Text="Дата рождения:" Width="160" Margin="0,0,0,5"/>
            <DatePicker x:Name="dpDate" Width="160" Margin="0,0,0,5" />





            <TextBlock TextWrapping="Wrap" Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="pswPass1" Width="160" Margin="0,0,0,5" PasswordChanged="PasswordChanged" />
            
            <TextBlock TextWrapping="Wrap" Text="Повторите пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="pswPass2" Width="160" Margin="0,0,0,10" PasswordChanged="PasswordChanged"/>

            <Button x:Name="btnRegister" Content="Зарегистрироваться" Width="160" Margin="0,0,0,5" Click="BtnRegister_Click"/>
            <Button x:Name="btnBack" Click="BtnBack_Click" Content="Назад" Width="160" Margin="0,0,0,5"/>
        </StackPanel>

    </Grid>
</Page>
