<Page x:Class="CulinaryBook.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CulinaryBook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <StackPanel Width="160" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-60,0,0" >
        <TextBlock HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Top" FontSize="24" TextAlignment="Center">
            <Run Language="ru-ru" Text="Авторизация"/>
        </TextBlock>
        <TextBlock TextWrapping="Wrap" Text="Логин:" Width="160" Margin="0,0,0,5"/>
        <TextBox Name="txbLogin" TextWrapping="Wrap" Width="160" Margin="0,0,0,5" />
        <TextBlock TextWrapping="Wrap" Text="Пароль:" Margin="0,0,0,5"/>
        <PasswordBox Name="psbPassword" Width="160" Margin="0,0,0,5" />
        <Button x:Name="ButtonGo"  Click="ButtonGo_Click" Content="Войти" Width="100" Margin="0,0,0,5"/>
    </StackPanel>
</Page>
